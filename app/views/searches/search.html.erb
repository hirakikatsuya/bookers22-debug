<% if @range=="Book" %>
  <h1>Books search for "<%= params[:word] %>"</h1>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image,size:"50x50" %></td>
        <td><%= link_to book.title,book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1>Users search for "<%= params[:word] %>"</h1>
  <table  class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Introduction</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image,size:"50x50" %></td>
        <td><%= link_to user.name,user_path(user.id) %></td>
        <td><%= user.introduction %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>